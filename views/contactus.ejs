}
.row {
  margin-left:-30px;
  margin-right:-5px;
}
  
.column {
  float: left;
  width: 25%;
  padding: 25px;
}

/* Clearfix (clear floats) */
.row::after {
  content: "";
  clear: both;
  display: table;
}
body{
